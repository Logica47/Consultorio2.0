@model IEnumerable<Hospital.Models.usuario>

@{
    ViewBag.Title = "Index";
}

<h2 class="mt-4">Usuario</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Usuario
        </th>

        <th>
            Contraseña
        </th>
        <th>
            Permisos
        </th>
        <th>
            Empleado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.usuario1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pass)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.permiso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.empleado.nombre) @Html.DisplayFor(modelItem => item.empleado.apellido)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.usuario1 }) |
            @Html.ActionLink("Details", "Details") |
            @Html.ActionLink("Delete", "Delete", new { id = item.usuario1 })
        </td>
    </tr>
}

</table>
