@model IEnumerable<Hospital.Models.visita>

@{
    ViewBag.Title = "Index";
}

<h2 class="mt-4">Visitas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha Actual
        </th>
        <th>
            Proxima Fecha
        </th>
        <th>
            Motivo
        </th>
        <th>
            Comentario
        </th>
        <th>
            Doctor
        </th>
        <th>
            Receta
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fechaLlegada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.proximaFecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.motivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.comentario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.empleado.nombre) @Html.DisplayFor(modelItem => item.empleado.apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.receta.idPaciente)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idVisita }) |
            @Html.ActionLink("Details", "Details", new { id=item.idVisita }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idVisita })
        </td>
    </tr>
}

</table>
